{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist-scripts",
    "rootDir": "./scripts",
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
